<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>  

        <record id="form_account_wizardPostVoucher" model="ir.ui.view">
            <field name="name">Post Voucher</field>
            <field name="model">account.wizard_post_voucher</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Post Voucher">
                	<field name="effective_date"/>
                    <group col="2" colspan="4">
                        <button special="cancel" string="_Cancel" icon="gtk-cancel"/>
                        <button name="button_run_wizard" string="Post Voucher" colspan="1" type="object" icon="gtk-apply"/>
                    </group>
                </form>
            </field>
        </record>
        
        <record id="waction_account_wizardPostVoucher" model="ir.actions.act_window">
            <field name="name">Post Voucher</field>
            <field name="res_model">account.wizard_post_voucher</field>
            <field name="view_type">form</field>
            <field name="view_id" ref="form_account_wizardPostVoucher"/>
            <field name="target">new</field>
        </record>          
        
    </data>
</openerp>
