<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>  

        <record id="form_account_wizardPrintBalanceSheet" model="ir.ui.view">
            <field name="name">Print Balance Sheet</field>
            <field name="model">account.wizard_print_balance_sheet</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Print Balance Sheet">
                	<field name="company_id" widget="selection"/>
                	<newline/>
                	<field name="to_date"/>
                	<newline/>
                    <group col="2" colspan="4">
                        <button special="cancel" string="_Cancel" icon="gtk-cancel"/>
                        <button name="button_print_report" string="Print Balance Sheet" colspan="1" type="object" icon="gtk-apply"/>
                    </group>
                </form>
            </field>
        </record>
        
        <record id="waction_account_wizardPrintBalanceSheet" model="ir.actions.act_window">
            <field name="name">Print Balance Sheet</field>
            <field name="res_model">account.wizard_print_balance_sheet</field>
            <field name="view_type">form</field>
            <field name="view_id" ref="form_account_wizardPrintBalanceSheet"/>
            <field name="target">new</field>
        </record>          
        
    </data>
</openerp>
