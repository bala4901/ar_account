<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>  

        <record id="form_account_wizardRefundInvoice" model="ir.ui.view">
            <field name="name">Refund Invoice</field>
            <field name="model">account.wizard_refund_invoice</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Refund Invoice">
                	<field name="date_refund"/>
                    <group col="2" colspan="4">
                        <button special="cancel" string="_Cancel" icon="gtk-cancel"/>
                        <button name="button_refund_invoice" string="Refund Invoice" colspan="1" type="object" icon="gtk-apply"/>
                    </group>
                </form>
            </field>
        </record>
        
        <record id="waction_account_wizardRefundInvoice" model="ir.actions.act_window">
            <field name="name">Refund Invoice</field>
            <field name="res_model">account.wizard_refund_invoice</field>
            <field name="view_type">form</field>
            <field name="view_id" ref="form_account_wizardRefundInvoice"/>
            <field name="target">new</field>
        </record>          
        
    </data>
</openerp>
