<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
		<!-- SEARCH VIEW -->
		
        <record id="select_account_bankPayment" model="ir.ui.view">
            <field name="name">Search Bank Payment</field>
            <field name="model">account.bank_payment</field>
            <field name="type">search</field>
            <field name="arch" type="xml">
                <search string="Search Bank Payment">
                    <group>
                        <filter icon="terp-document-new" string="Draft" domain="[('state','=','draft')]" help="Draft Vouchers"/>
                        <filter icon="terp-camera_test" string="Posted" domain="[('state','=','posted')]" help="Posted Vouchers"/>
                        <separator orientation="vertical"/>
                        <filter icon="terp-gtk-jump-to-ltr" string="To Review" domain="[('state','=','posted')]" groups="base.group_extended" help="To Review"/>
                        <separator orientation="vertical"/>
                        <field name="date"/>
                        <field name="number" string="# Voucher"/>
                    </group>
                    <newline/>
                    <group>
                        <field name="journal_id" widget="selection" context="{'journal_id': self, 'set_visible':False}" domain="[('type','in',('bank','cash'))]"/>
                        <field name="period_id" groups="base.group_extended"/>
                    </group>
                   <newline/>
                    <group expand="0" string="Group By...">
                        <filter string="Journal" icon="terp-folder-orange" domain="[]" context="{'group_by':'journal_id'}"/>
                        <filter string="Period" icon="terp-go-month" domain="[]" context="{'group_by':'period_id','visible':True}"/>
                        <filter string="State" icon="terp-stock_effects-object-colorize" domain="[]" context="{'group_by':'state'}"/>
                    </group>
                </search>
            </field>
        </record>
        
        <!-- FORM -->
        
        <record model="ir.ui.view" id="form_account_bankPayment">
            <field name="name">Form Bank Payment</field>
            <field name="model">account.bank_payment</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Bank Payment">
                    <group colspan="4" col="3" name="group_1" >
                    	<group colspan="1" col="2" name="group_1_1">
                    		<separator string="Bank Payment" colspan="2"/>
                    		<field name="number" string="# Voucher"/>
                    		<!--
                    		DIHILANGKAN
                    		<field name="partner_id" required="1" invisible="context.get('line_type', False)" on_change="onchange_partner_id(partner_id, journal_id, amount, currency_id, type, date, context)" context="{'invoice_currency':currency_id, 'default_customer': 0, 'search_default_supplier': 1, 'default_supplier': 1}"  string="Supplier"/>
                    		-->
                    		
                    		
                    		<field name="date" select="1" invisible="context.get('line_type', False)" on_change="onchange_date(date, currency_id, payment_rate_currency_id, amount, company_id, context)" required="1"/>
                    		<!--
		                    <field name="journal_id"
		                        domain="[('type','in',['bank', 'cash'])]"
		                        invisible="context.get('line_type', False)"
		                        widget="selection" select="1"
		                        on_change="onchange_journal(journal_id, line_dr_ids, False, partner_id, date, amount, type, company_id, context)"
		                        string="Bank"/>                    		
	                        -->
		                    <field name="journal_id" invisible="context.get('line_type', False)" select="1" string="Journal" on_change="onchange_journal_id(journal_id)"/>   

							<!--		                        	                        
							<field name="amount" invisible="context.get('line_type', False)" on_change="onchange_amount(amount, payment_rate, partner_id, journal_id, currency_id, type, date, payment_rate_currency_id, company_id, context)"/>                             		
							-->
							
							                             		
							
                    		<field name="company_id" widget="selection" groups="base.group_multi_company"/>
							<field name="account_id" widget="selection" invisible="True"/> 

           					<field name="name" invisible="context.get('line_type', False)"/>					
							

							<field name="pre_line" invisible="1"/>

							
							<field name="type" invisible="True"/>
							<!--
							<field name="currency_id" invisible="1" colspan="4"/>				
							-->
							
							
							<field name="voucher_type_id" invisible="1"/>		
                		</group>       
                    	<group colspan="1" col="2" name="group_1_3">
                    		<separator string="Payment Method" colspan="2"/>
                    		<field name="payment_method" required="1"/>
                    		<field name="cheque_number" attrs="{'required' : [('payment_method','!=','bank_transfer')], 'invisible':[('payment_method','!=','cheque'),('payment_method','!=','giro')]}"/>
                    		<field name="cheque_date" attrs="{'required' : [('payment_method','!=','bank_transfer')], 'invisible':[('payment_method','!=','cheque'),('payment_method','!=','giro')]}"/>
                    		<field name="cheque_recepient" attrs="{'invisible':[('payment_method','!=','cheque')]}"/>
                    		<field name="cheque_partner_bank_id" domain="[('partner_id','=',partner_id)]" attrs="{'required' : [('payment_method','=','giro')], 'invisible':[('payment_method','!=','giro')]}"/>
                    		<field name="cheque_bank_id" attrs="{'invisible':[('payment_method','!=','giro')]}"/>
                		</group>  
                    	<group colspan="1" col="2" name="group_1_2">
                    		<separator string="Amount" colspan="2"/>
                    		<field name="amount" invisible="context.get('line_type', False)"/>
                    		<field name="currency_id"/>
                    		<field name="is_multi_currency" invisible="1"/>
                            <field name="payment_rate" required="1" on_change="onchange_rate(payment_rate, amount, currency_id, payment_rate_currency_id, company_id, context)"/>
                            <field name="payment_rate_currency_id"  on_change="onchange_payment_rate_currency(currency_id, payment_rate, payment_rate_currency_id, date, amount, company_id, context)"/>
                            <field name="paid_amount_in_company_currency"/>                    		
                		</group>                     		               		    		
                    </group>
                    <notebook colspan="4">
                        <page string="Voucher Detail">
                        	
                        	<!--
                            <field name="line_dr_ids" context="{'journal_id':journal_id, 'type':type, 'partner_id':partner_id}" colspan="4" nolabel="1" height="140">
                            -->
                            <field name="line_dr_ids" colspan="4" nolabel="1" height="140">
                            
                                <tree string="Voucher Detail" editable="bottom" colors="gray:amount==0">
                                	<!--
                                    <field name="move_line_id" context="{'journal_id':parent.journal_id, 'partner_id':parent.partner_id}"
                                        on_change="onchange_move_line_id(move_line_id)"
                                        domain="[('account_id.type','=','payable'), ('reconcile_id','=', False), ('partner_id','=',parent.partner_id)]"
                                        required="1"
                                        />
                                    -->
                                    <field name="move_line_id" domain="[('reconcile_id','=',False),('account_id.reconcile','=',True),('credit','>',0)]" on_change="onchange_move_id(move_line_id, parent.journal_id, parent.currency_id)"/>                                    
                                    
                                    <!--
                                    <field name="account_id" groups="base.group_no_one" domain="[('type','=','payable')]"/>
                                    -->
                                    <field name="account_id" domain="[('type','!=','view')]"/>
                                    <field name="name"/>
                                    
                                    <field name="date_original" readonly="1"/>
                                    <field name="date_due" readonly="1"/>
                                    <field name="amount_original" readonly="1"/>
                                    <field name="amount_unreconciled" readonly="1"/>
                                    <field name="reconcile" on_change="onchange_reconcile(reconcile, amount, amount_unreconciled, context)"/>
                                    <field name="amount" sum="Total Allocation" on_change="onchange_amount(amount, amount_unreconciled, context)"/>
                                </tree>
                            </field>
                            <button name="%(waction_stock_wizardImportMoveLine)d" string="Import Invoice" icon="gtk-execute" type="action" context="{'move_type' : 'cr'}"/>
							<field name="writeoff_amount"/>
                        </page>
                        <page string="Notes">
                        	<field name="narration" colspan="4" nolabel="1"/>
                        </page>
                        <page string="Journal Items" groups="base.group_extended" attrs="{'invisible': [('state','!=','posted')]}">
                            <group col="6" colspan="4">
                                <field name="period_id"/>
                                <field name="audit"/>
                            </group>
                            <field name="move_ids" colspan="4" nolabel="1" readonly="1">
                               <tree string="Journal Items">
                                   <field name="move_id"/>
                                   <field name="ref"/>
                                   <field name="date"/>
                                   <field name="statement_id"/>
                                   <field name="partner_id"/>
                                   <field name="account_id"/>
                                   <field name="name"/>
                                   <field name="debit"/>
                                   <field name="credit"/>
                                   <field name="state"/>
                                   <field name="reconcile_id"/>
                                   <field name="amount_currency"/>
                                   <field name="currency_id"/>
                               </tree>
                            </field>
                        </page>
                    </notebook>
                    <group name="group_2" colspan="4" col="3">
                    	<group name="group_2_1" colspan="1" col="2">
                    		<separator string="State" colspan="2"/>
                        	<field name="state"/>
                    	</group>
                    	<group name="group_2_2" colspan="1" col="2">
                    		<separator string="Print" colspan="2"/>
                    	</group>
                    	<group name="group_2_3" colspan="1" col="2">
                    		<separator string="Workflow" colspan="2"/>
		                    <button name="button_cancel_voucher" type="object" string="Cancel" states="draft,proforma"  icon="gtk-cancel" invisible="context.get('line_type', False)" colspan="2"/>
		                    <button name="cancel_voucher" string="Unreconcile" type="object" states="posted" icon="terp-stock_effects-object-colorize" invisible="context.get('line_type', False)" confirm="Are you sure to unreconcile and cancel this record ?" colspan="2"/>
		                    <button name="action_cancel_draft" type="object" states="cancel" string="Set to Draft" icon="terp-stock_effects-object-colorize" invisible="context.get('line_type', False)" colspan="2"/>
		                    <button name="button_proforma_voucher" type="object" string="Validate" states="draft" icon="gtk-go-forward" invisible="context.get('line_type', False)" colspan="2"/>                    		
                    	</group>                    	
                    </group>
                </form>
            </field>
        </record>        
        
        <!-- TREE -->
        
        <record model="ir.ui.view" id="tree_account_bankPayment">
            <field name="name">Tree Bank Payment</field>
            <field name="model">account.bank_payment</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree colors="blue:state == 'draft';gray:state == 'cancel';red:audit" string="Voucher Entries">
                    <field name="number" string="# Voucher"/>
                    <field name="reference" string="Description"/>
                    <field name="date"/>
                    <field name="period_id"/>
                    <field name="journal_id"/>
                    <field name="payment_method"/>
                   <field name="cheque_number"/>
                   <field name="cheque_date"/>
                    <field name="amount" sum="Total Amount"/>
                    <field name="audit"/>
                    <field name="state"/>
                    <button name="proforma_voucher" string="Post" states="draft" icon="terp-document-new"/>
                </tree>
            </field>
        </record>        

	</data>
</openerp>
