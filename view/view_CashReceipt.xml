<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
		<!-- SEARCH VIEW -->
		
        <record id="select_account_cashReceipt" model="ir.ui.view">
            <field name="name">Search Cash Receipt</field>
            <field name="model">account.cash_receipt</field>
            <field name="type">search</field>
            <field name="arch" type="xml">
                <search string="Search Cash Receipt">
                    <group>
                        <filter icon="terp-document-new" name="draft" string="Draft" domain="[('state','=','draft')]"/>
                        <filter icon="gtk-apply" name="confirm" string="Confirm" domain="[('state','=','confirm')]"/>
                        <filter icon="gtk-media-pause" name="waiting" string="Waiting" domain="[('state','=','waiting')]"/>
						<filter icon="gtk-yes" name="ready" string="Ready" domain="[('state','=','ready')]"/>
						<filter icon="gtk-media-forward" name="proforma" string="Proforma" domain="[('state','=','proforma')]"/>
						<filter icon="gtk-media-next" name="post" string="Posted" domain="[('state','=','posted')]"/>
                        <separator orientation="vertical"/>
                        <filter icon="gtk-cancel" name="cancel" string="Cancelled" domain="[('state','=','cancel')]"/>
                        <newline/>
                        <field name="number" string="# Voucher"/>
                        <field name="name" string="Description"/>
                        <field name="journal_id" widget="selection" domain="[('type','=','bank')]"/>
                        <newline/>
						<field name="date" string="Date From" filter_domain="[('date','&gt;=',self)]"/>
						<field name="date" string="Date To" filter_domain="[('date','&gt;=',self)]"/>
                        <field name="period_id"/>
                    </group>
                   <newline/>
                    <group expand="0" string="Group By...">
                        <filter string="Journal" icon="terp-folder-orange" domain="[]" context="{'group_by':'journal_id'}"/>
                        <filter string="Period" icon="terp-go-month" domain="[]" context="{'group_by':'period_id','visible':True}"/>
                        <filter string="State" icon="terp-stock_effects-object-colorize" domain="[]" context="{'group_by':'state'}"/>
                    </group>
                </search>
            </field>
        </record>
        
        <!-- FORM -->
        
        <record model="ir.ui.view" id="form_account_cashReceipt">
            <field name="name">Form Cash Receipt</field>
            <field name="model">account.cash_receipt</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Cash Receipt" version="7.0">
					<header>
                        <button name="button_confirm" type="workflow" string="Confirm" colspan="2" icon="gtk-yes" states="draft" groups="ar_account.group_account_cashReceiptValidator"/>
						<button name="button_approve" type="workflow" string="Approve" colspan="2" icon="gtk-yes" states="confirm" groups="ar_account.group_account_cashReceiptValidator"/>
                        <button name="button_proforma" type="workflow" string="Proforma" colspan="2" icon="gtk-yes" states="approve" groups="ar_account.group_account_cashReceiptUser"/>
                        <button name="button_posted" type="workflow" string="Posted" colspan="2" icon="gtk-yes" states="proforma,approve" groups="ar_account.group_account_cashReceiptPost"/>
                        <button name="button_cancel" type="workflow" string="Cancel" colspan="2" icon="gtk-cancel" states="draft,confirm,proforma,approve" groups="ar_account.group_account_cashReceiptCancel"/>
                        <button name="button_action_cancel" type="object" string="Cancel" colspan="2" icon="gtk-cancel" states="posted" groups="ar_account.group_account_cashReceiptCancel"/>
                        <button name="button_action_set_to_draft" type="object" string="Set To Draft" colspan="2" icon="terp-stock_effects-object-colorize" states="cancel" groups="ar_account.group_account_cashReceiptCancel"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,confirm,approve,proforma,posted" statusbar_colors='{"posted":"green","cancel":"red"}'/> 
					</header>
					<sheet>
                        <h1>
                            <label string="Cash Receipt"/>
                        </h1>
		                <group colspan="4" col="3" name="group_1" >
		                	<group colspan="1" col="2" name="group_1_1">
		                		<field name="number" string="# Voucher"/>
		                		<field name="date" select="1" invisible="context.get('line_type', False)" on_change="onchange_date(date, currency_id, payment_rate_currency_id, amount, company_id, context)" required="1"/>
				                <field name="journal_id" invisible="context.get('line_type', False)" select="1" string="Journal" on_change="onchange_journal_id(journal_id)"/>   
		            		</group>       
		                	<group colspan="1" col="2" name="group_1_2">
		                		<field name="company_id" widget="selection"/>
								<field name="account_id" widget="selection" invisible="True"/> 
		       					<field name="name" invisible="context.get('line_type', False)" required="1" string="Description"/>			
								<field name="pre_line" invisible="1"/>		
								<field name="type" invisible="True"/>
								<field name="voucher_type_id" invisible="1"/>		                 		             		
		            		</group>                     		               		    		
		                </group>
		                <notebook colspan="4">
		                    <page string="Voucher Detail">
								<div class="oe_right oe_button_box" name="buttons">
									<button name="%(waction_stock_wizardImportMoveLine)d" string="Import Move Lines" states="draft" icon="gtk-execute" type="action" context="{'move_type' : 'cr'}" colspan="2"/>
								</div> 
		                        <field name="line_cr_ids" colspan="4" nolabel="1" height="140">
		                            <tree string="Voucher Detail" editable="bottom" colors="gray:amount==0">
		                                <field name="move_line_id" domain="[('reconcile_id','=',False),('account_id.reconcile','=',True),('debit','>',0)]" on_change="onchange_move_id(move_line_id, parent.journal_id, parent.currency_id)" readonly="1"/>                                    
		                                <field name="account_id" domain="[('type','!=','view')]"/>
		                                <field name="name" required="1"/>
		                                <field name="date_original" readonly="1"/>
		                                <field name="date_due" readonly="1"/>
		                                <field name="amount_original" readonly="1"/>
		                                <field name="amount_unreconciled" readonly="1"/>
		                                <field name="reconcile" on_change="onchange_reconcile(reconcile, amount, amount_unreconciled, context)"/>
		                                <field name="amount" sum="Total Allocation" on_change="onchange_amount(amount, amount_unreconciled, context)"/>
		                            </tree>
		                        </field>
		                        <group name="group_4" colspan="4" col="2">
				                    <group colspan="1" col="2" name="group_4_1">
                                        <field name="amount" string="Total Voucher" widget="monetary" options="{'currency_field' : 'currency_id'}"/>
				                        <field name="currency_id" string="Voucher Currency" invisible="1"/>
				                        <field name="is_multi_currency" invisible="1"/>
				                        <field name="payment_rate" required="1" on_change="onchange_rate(payment_rate, amount, currency_id, payment_rate_currency_id, company_id, context)" string="Exc. Rate"/>
				                        <field name="payment_rate_currency_id"  on_change="onchange_payment_rate_currency(currency_id, payment_rate, payment_rate_currency_id, date, amount, company_id, context)" string="Company Currency" invisible="1"/>
                                        <field name="paid_amount_in_company_currency" string="Total In Company Currency" widget="monetary" options="{'currency_field' : 'payment_rate_currency_id'}"/>                    		
				                    </group>    
		                    		<group name="group_4_2" colspan="1" col="2">
                                        <field name="writeoff_amount" widget="monetary" options="{'currency_field' : 'currency_id'}"/>
										<field name="payment_option" invisible="1"/>
										<field name="writeoff_acc_id" domain="[('type','!=','view')]" attrs="{'required':[('writeoff_amount','!=',0)]}"/>
									</group>
								</group>
		                    </page>
		                    <page string="Notes">
		                    	<field name="narration" colspan="4" nolabel="1"/>
		                    </page>
		                    <page string="Journal Items" groups="base.group_extended" attrs="{'invisible': [('state','!=','posted')]}">
		                        <group col="6" colspan="4">
		                            <field name="period_id"/>
		                        </group>
		                        <field name="move_ids" colspan="4" nolabel="1" readonly="1">
		                           <tree string="Journal Items">
		                               <field name="move_id"/>
		                               <field name="ref"/>
		                               <field name="date"/>
		                               <field name="statement_id"/>
		                               <field name="partner_id"/>
		                               <field name="account_id"/>
		                               <field name="name"/>
		                               <field name="debit"/>
		                               <field name="credit"/>
		                               <field name="state"/>
		                               <field name="reconcile_id"/>
		                               <field name="amount_currency"/>
		                               <field name="currency_id"/>
		                           </tree>
		                        </field>
		                    </page>
				            <page string="Audit Trail">
				                <group name="group_3" colspan="4" col="3">
				                    <field name="created_time" string="Created"/>
				                    <field name="created_user_id" nolabel="1"/>
				                    <field name="confirmed_time" string="Confirmed"/>
				                    <field name="confirmed_user_id" nolabel="1"/>
				                    <field name="approved_time" string="Approved"/>
				                    <field name="approved_user_id" nolabel="1"/>
				                    <field name="proforma_time" string="Proforma"/>
				                    <field name="proforma_user_id" nolabel="1"/>
				                    <field name="posted_time" string="Posted"/>
				                    <field name="posted_user_id" nolabel="1"/>
				                </group>
				            </page>
		                </notebook>
					</sheet>
                </form>
            </field>
        </record>        
        
        <!-- TREE -->
        
        <record model="ir.ui.view" id="tree_account_cashReceipt">
            <field name="name">Tree Cash Receipt</field>
            <field name="model">account.cash_receipt</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree colors="blue:state == 'draft';gray:state == 'cancel'" string="Voucher Entries">
                    <field name="number" string="# Voucher"/>
                    <field name="reference" string="Description"/>
                    <field name="date"/>
                    <field name="period_id"/>
                    <field name="company_id"/>
                    <field name="journal_id"/>
                    <field name="amount" sum="Total Amount"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>        

	</data>
</openerp>
