<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
		
		
        <record id="tree_base_sequence" model="ir.ui.view">
            <field name="name">Tree Sequence</field>
            <field name="model">ir.sequence</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Sequence">
                    <field name="code" string="Kode"/>
                    <field name="name" string="Sequence"/>
                    <field name="active" string="Aktif"/>
                </tree>
            </field>
        </record>
		

	<record id="form_base_sequence" model="ir.ui.view">
            <field name="name">Form Sequence</field>
            <field name="model">ir.sequence</field>
            <field name="type">form</field>
            <field name="priority" eval="1"/>
            <field name="arch" type="xml">
                <form string="Sequence">
                	<group colspan="4" col="2">
            			<group colspan="1" col="2">
							<separator string="Sequence" colspan="2"/>
			                <field name="name" select="1"/>
			                <field name="code" select="1"/>
            			</group>
            			<group colspan="1" col="2">
							<separator string="Status" colspan="2"/>
							<field name="active" select="2"/>
            			</group>                			
                	</group>
                	<notebook>
                		<page string="Pengaturan Sequence">
				        	<group colspan="4" col="2">
			        			<group colspan="1" col="2">
			        				<separator string="Prefiks dan Suffiks" colspan="2"/>
			        				<field name="prefix" string="Prefiks"/>
			        				<field name="suffix" string="Suffiks"/>
			        			</group>
			        			<group colspan="1" col="2">
			        				<separator string="No. Urut" colspan="2"/>
							        <field name="padding" string="Jumlah Digit"/>
							        <field name="number_increment" string="Kenaikan"/>
							        <field name="number_next" string="No. Selanjutnya"/>
			        			</group>				        			
				        	</group>                		
		                    <separator colspan="4" string="Opsi Untuk Prefiks dan Suffiks)"/>
		                    <group col="8" colspan="4">
		                        <group>
		                            <label colspan="4" string="Current Year with Century: %%(year)s"/>
		                            <label colspan="4" string="Current Year without Century: %%(y)s"/>
		                            <label colspan="4" string="Month: %%(month)s"/>
		                            <label colspan="4" string="Day: %%(day)s"/>
		                        </group>
		                        <group>
		                            <label colspan="4" string="Day of the year: %%(doy)s"/>
		                            <label colspan="4" string="Week of the year: %%(woy)s"/>
		                            <label colspan="4" string="Day of the week (0:Monday): %%(weekday)s"/>
		                        </group>
		                        <group>
		                            <label colspan="4" string="Hour 00->24: %%(h24)s"/>
		                            <label colspan="4" string="Hour 00->12: %%(h12)s"/>
		                            <label colspan="4" string="Minute: %%(min)s"/>
		                            <label colspan="4" string="Seconde: %%(sec)s"/>
		                        </group>
		                    </group>				        	
                		</page>
                		<page string="Sequence Berdasarkan Periode">
                			<field name="period_ids" nolabel="1" colspan="4" mode="tree,form">
                				<tree string="Sequence Berdasarkan Periode">
                					<field name="period_id" string="Periode"/>
                					<field name="sequence_id" string="Sequence"/>
                				</tree>
                				<form string="Sequence Berdasarkan Periode">
                					<field name="period_id" string="Periode"/>
                					<field name="sequence_id" string="Sequence"/>
                				</form>                				
                			</field>
                		</page>
                	</notebook>
                	<group colspan="4" col="3">
                		<group colspan="1" col="2">
                			<separator string="Status" colspan="2"/>
                		</group>
                		<group colspan="1" col="2">
                			<separator string="Action" colspan="2"/>

                		</group>
                		<group colspan="1" col="2">
                			<separator string="Workflow" colspan="2"/>
                		</group>
                	</group>
                </form>
            </field>
        </record>
	</data>
</openerp>
