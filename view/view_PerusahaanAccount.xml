<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
	
        <record id="tree_account_perusahaanAccount" model="ir.ui.view">
            <field name="name">Tree Perusahaan Account</field>
            <field name="model">res.company</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Konfigurasi Default Keuangan">
                    <field name="name" string="Nama Perusahaan"/>
					<field name="partner_id" string="Alamat"/>
                </tree>
            </field>
        </record>

        <record id="form_account_perusahaanAccount" model="ir.ui.view">
            <field name="name">Form Perusahaan Account</field>
            <field name="model">res.company</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Konfigurasi Default Keuangan">
					<group colspan="4" col="2">
						<group colspan="1" col="2">
							<separator string="Perusahaan" colspan="2"/>
						    <field name="name" string="Nama Gudang"/>
				        	<field name="parent_id" string="Perusahaan Induk"/>
                		</group>
						<group colspan="1" col="2">
							<separator string="Partner" colspan="2"/>
						    <field name="partner_id" string="Partner"/>
                		</group>                		
					</group>
					<notebook colspan="4">
						<page string="Pengaturan Umum">

						</page>
					</notebook>
				</form>
            </field>
        </record>
	</data>
</openerp>
