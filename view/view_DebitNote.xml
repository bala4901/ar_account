<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
		<!-- TREE VIEW -->
        <record id="tree_account_debitNote" model="ir.ui.view">
            <field name="name">Tree Debit Note</field>
            <field name="model">account.debit_note</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree colors="blue:state == 'draft';black:state in ('proforma','proforma2','open');gray:state == 'cancel'" string="Debit Note">
                	<field name="number" string="# Debit Note"/>
                    <field name="date_invoice" string="Date"/>
                    <field name="period_id" string="Period"/>
                    <field name="partner_id" string="Supplier"/>
                    <field name="reference" invisible="1"/>
                    <field name="name" string="Description"/>
                    <field name="journal_id" invisible="1"/>
                    <field name="company_id" widget="selection"/>
                    <field name="origin"/>
                    <field name="currency_id"/>
                    <field name="residual" sum="Residual Amount"/>
                    <field name="amount_untaxed" sum="Untaxed Amount"/>
                    <field name="amount_total" sum="Total Amount"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>
        
        <!-- FORM VIEW -->
        <record id="form_account_debitNote" model="ir.ui.view">
            <field name="name">Form Debit Note</field>
            <field name="model">account.debit_note</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Debit Note">
                	<group name="group_1" colspan="4" col="3">
                		<group name="group_1_1" colspan="1" col="2">
                			<separator string="Debit Note" colspan="2"/>
                			<field name="number" string="# Invoice"/>
                			<field name="journal_id" on_change="onchange_journal_id(journal_id, context)" invisible="1"/>
                			<field name="type" invisible="1"/>
                			<field name="currency_id" width="50"/>
                			<field name="invoice_type_id" invisible="1"/>
                			<!--
                			<field name="company_id" on_change="onchange_company_id(company_id,partner_id,type,invoice_line,currency_id)" widget="selection"/>
                			-->
                			<field name="company_id" widget="selection"/>
                			 <field domain="[('company_id', '=', company_id),('type','=', 'receivable')]" name="account_id"/>
                			 <field name="name"/>
                		</group>
                		<group name="group_1_2" colspan="1" col="2">
                			<separator string="Customer" colspan="2"/>
                			<field string="Supplier" name="partner_id" on_change="onchange_partner_id(type,partner_id,date_invoice,payment_term, partner_bank_id,company_id)" context="{'search_default_customer': 1}" options='{"quick_create": false}' domain="[('supplier', '=', True)]"/>
                			<field domain="[('partner_id','=',partner_id)]" name="address_invoice_id" context="{'default_partner_id': partner_id}" options='{"quick_create": false}'/>
                            <field domain="[('partner_id','=',partner_id)]" name="address_contact_id"/>
                            <!--
                			<field name="fiscal_position" groups="base.group_extended" widget="selection" options='{"quick_create": false}'/>
                			-->
                		</group>                		
                		<group name="group_1_3" colspan="1" col="2">
                			<separator string="Date &amp; Period" colspan="2"/>
                			<field name="date_invoice" required="1" string="Date"/>
                			<field name="period_id" domain="[('state', '=', 'draft')]" widget="selection" string="Period"/>
                			<field name="payment_term" widget="selection" invisible="1"/>
                			<field name="date_due" invisible="1"/>
                		</group>                		
                	</group>
                    <notebook colspan="4">
                        <page string="Invoice">
                            <field name="invoice_line" nolabel="1" widget="one2many_list" context="{'type': type}" colspan="4"/>
                            <group name="group_3" col="2" colspan="4">
                                <field name="tax_line" nolabel="1" colspan="1">
                                    <tree editable="bottom" string="Taxes">
                                        <field name="name"/>
                                        <field name="account_id" groups="account.group_account_invoice"/>
                                        <field name="base" on_change="base_change(base,parent.currency_id,parent.company_id,parent.date_invoice)" readonly="1"/>
                                        <field name="amount" on_change="amount_change(amount,parent.currency_id,parent.company_id,parent.date_invoice)"/>
                                        <field invisible="True" name="base_amount"/>
                                        <field invisible="True" name="tax_amount"/>
                                        <field name="factor_base" invisible="True"/>
                                        <field name="factor_tax" invisible="True"/>
                                    </tree>
                                </field>
                                <group name="group_3_1" colspan="1" col="2">
		                            <field name="amount_untaxed"/>
		                            <field name="amount_tax"/>
		                           	<field name="residual"/>
		                            <field name="amount_total"/>                                
                                </group>
                        </group>
                        </page>
                        <page string="Other Info">
                            <field name="user_id"/>
                            <newline/>
                            <field domain="[('partner_id.ref_companies', 'in', [company_id])]" name="partner_bank_id"
                                groups="base.group_extended"/>
                            <field name="origin"/>

                            <field name="move_id" groups="account.group_account_user"/>
                            
                        </page>
                        <page string="Payments">
                            <field name="payment_ids" colspan="4" nolabel="1">
                                <tree string="Payments">
                                    <field name="date"/>
                                    <field name="move_id"/>
                                    <field name="ref"/>
                                    <field name="name"/>
                                    <field name="journal_id" groups="base.group_user"/>
                                    <field name="debit"/>
                                    <field name="credit"/>
                                    <field name="amount_currency"/>
                                    <field name="currency_id"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Note">
                        	<field colspan="4" name="comment" nolabel="1"/>
                        </page>
                    </notebook>
                    <group name="group_2" colspan="4" col="3">
                    	<group name="group_2_1" colspan="1" col="2">
                    		<separator string="State" colspan="2"/>
                            <field name="state" widget="statusbar" statusbar_visible="draft,open,paid" statusbar_colors='{"proforma":"blue","proforma2":"blue"}'/>
                            <field name="reconciled"/>
                    	</group>
                    	<group name="group_2_2" colspan="1" col="2">
                    		<separator string="Action" colspan="2"/>
                    		<button name="button_reset_taxes" states="draft,proforma2" string="Compute Taxes" type="object"  icon="terp-stock_format-scientific" help="This action will erase taxes" colspan="2"/>
                    	</group>                    	
                    	<group name="group_2_3" colspan="1" col="2">
                    		<separator string="Workflow" colspan="2"/>
                            <button name="button_invoice_cancel" type="object" states="draft,proforma2,sale,open" string="Cancel" icon="gtk-cancel" colspan="2" groups="ar_account.group_account_debitNoteCancel"/>
                            <button name="action_cancel_draft" states="cancel" string="Reset to Draft" type="object" icon="terp-stock_effects-object-colorize" colspan="2" groups="ar_account.group_account_debitNoteCancel"/>
                            <button name="button_invoice_proforma2" type="object" states="draft" string="PRO-FORMA" icon="terp-gtk-media-pause" colspan="2" groups="ar_account.group_account_debitNoteValidator"/>
                            <button name="button_invoice_open" type="object" states="draft,proforma2" string="Validate" icon="gtk-go-forward" colspan="2" groups="ar_account.group_account_debitNoteValidator"/>                    		
                    	</group>                    	
                    </group>
                </form>
            </field>
        </record>       
        
		<!-- SEARCH VIEW -->
        <record id="search_account_debitNote" model="ir.ui.view">
            <field name="name">Search Debit Note</field>
            <field name="model">account.debit_note</field>
            <field name="type">search</field>
            <field name="arch" type="xml">
                <search string="Debit Notes">
					<group>
						<filter name="draft" icon="terp-document-new" string="Draft" domain="[('state','=','draft')]"/>
						<filter name="proforma" icon="terp-gtk-media-pause" string="Proforma" domain="[('state','=','proforma2')]"/>
						<filter name="unpaid" icon="terp-dolar_ok!" string="Open" domain="[('state','=','open')]"/>
						<separator orientation="vertical"/>
						<field name="number" string="# Debit Note"/>
						<field name="partner_id" string="Supplier"/>
						<field name="date_invoice" string="Date"/>
					</group>
                </search>
            </field>

        </record>         
	</data>
</openerp>
