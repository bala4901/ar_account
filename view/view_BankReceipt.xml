<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
		<!-- SEARCH VIEW -->
		
        <record id="select_account_bankReceipt" model="ir.ui.view">
            <field name="name">Search Bank Receipt</field>
            <field name="model">account.bank_receipt</field>
            <field name="type">search</field>
            <field name="arch" type="xml">
                <search string="Search Bank Receipt">
                	<group>
                        <filter icon="terp-document-new" name="draft" string="Draft" domain="[('state','=','draft')]"/>
                        <filter icon="gtk-apply" name="confirm" string="Confirm" domain="[('state','=','confirm')]"/>
                        <filter icon="gtk-media-pause" name="waiting" string="Waiting" domain="[('state','=','waiting')]"/>
						<filter icon="gtk-yes" name="ready" string="Ready" domain="[('state','=','ready')]"/>
						<filter icon="gtk-media-forward" name="proforma" string="Proforma" domain="[('state','=','proforma')]"/>
						<filter icon="gtk-media-next" name="post" string="Posted" domain="[('state','=','posted')]"/>
                        <separator orientation="vertical"/>
                        <filter icon="gtk-cancel" name="cancel" string="Cancelled" domain="[('state','=','cancel')]"/>
                        <newline/>
                        <field name="number" string="# Voucher"/>
                        <field name="name" string="Description"/>
                        <field name="journal_id" widget="selection" domain="[('type','=','bank')]"/>
                        <newline/>
						<field name="date" string="Date From" filter_domain="[('date','&gt;=',self)]"/>
						<field name="date" string="Date To" filter_domain="[('date','&gt;=',self)]"/>
                        <field name="period_id"/>
                    </group>
                   <newline/>
                    <group expand="0" string="Group By...">
                        <filter string="Journal" icon="terp-folder-orange" domain="[]" context="{'group_by':'journal_id'}"/>
                        <filter string="Period" icon="terp-go-month" domain="[]" context="{'group_by':'period_id','visible':True}"/>
                        <filter string="State" icon="terp-stock_effects-object-colorize" domain="[]" context="{'group_by':'state'}"/>
                    </group>
                </search>
            </field>
        </record>
        
        <!-- FORM -->
        
        <record model="ir.ui.view" id="form_account_bankReceipt">
            <field name="name">Form Bank Receipt</field>
            <field name="model">account.bank_receipt</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Bank Receipt">
                    <group colspan="4" col="3" name="group_1" >
                    	<group colspan="1" col="2" name="group_1_1">
                    		<separator string="Bank Receipt" colspan="2"/>
                    		<field name="number" string="# Voucher"/>
                    		<!--
                    		DIHILANGKAN
                    		<field name="partner_id" required="1" invisible="context.get('line_type', False)" on_change="onchange_partner_id(partner_id, journal_id, amount, currency_id, type, date, context)" context="{'invoice_currency':currency_id, 'default_customer': 0, 'search_default_supplier': 1, 'default_supplier': 1}"  string="Supplier"/>
                    		-->
                    		
                    		
                    		<field name="date" select="1" invisible="context.get('line_type', False)" on_change="onchange_date(date, currency_id, payment_rate_currency_id, amount, company_id, context)" required="1"/>
                    		<!--
		                    <field name="journal_id"
		                        domain="[('type','in',['bank', 'cash'])]"
		                        invisible="context.get('line_type', False)"
		                        widget="selection" select="1"
		                        on_change="onchange_journal(journal_id, line_dr_ids, False, partner_id, date, amount, type, company_id, context)"
		                        string="Bank"/>                    		
	                        -->
		                    <field name="journal_id" invisible="context.get('line_type', False)" select="1" string="Journal" on_change="onchange_journal_id(journal_id)"/>   

							<!--		                        	                        
							<field name="amount" invisible="context.get('line_type', False)" on_change="onchange_amount(amount, payment_rate, partner_id, journal_id, currency_id, type, date, payment_rate_currency_id, company_id, context)"/>                             		
							-->
							
							                             		
							
                    		<field name="company_id" widget="selection"/>
							<field name="account_id" widget="selection" invisible="True"/> 

           					<field name="name" invisible="context.get('line_type', False)" required="1" string="Description"/>			
							

							<field name="pre_line" invisible="1"/>

							
							<field name="type" invisible="True"/>
							<!--
							<field name="currency_id" invisible="1" colspan="4"/>				
							-->
							
							
							<field name="voucher_type_id" invisible="1"/>		
                		</group>       
                    	<group colspan="1" col="2" name="group_1_3">
                    		<separator string="Payment Method" colspan="2"/>
                    		<field name="payment_method" required="1"/>
                    		<field name="cheque_number" attrs="{'required' : [('payment_method','!=','bank_transfer')], 'invisible':[('payment_method','!=','cheque'),('payment_method','!=','giro')]}"/>
                    		<field name="cheque_date" attrs="{'required' : [('payment_method','!=','bank_transfer')], 'invisible':[('payment_method','!=','cheque'),('payment_method','!=','giro')]}"/>
                    		<field name="cheque_recepient" attrs="{'invisible':[('payment_method','!=','cheque')]}"/>
                    		<field name="cheque_partner_bank_id" attrs="{'required' : [('payment_method','=','giro')], 'invisible':[('payment_method','!=','giro')]}"/>
                    		<field name="cheque_bank_id" attrs="{'invisible':[('payment_method','!=','giro')]}"/>
                		</group>  
                    	<group colspan="1" col="2" name="group_1_2">
                    		<separator string="Amount Total" colspan="2"/>
                    		<field name="amount" invisible="context.get('line_type', False)"/>
                    		<field name="currency_id"/>
                    		<separator string="Amount In Company Currency" colspan="2"/>
                    		<field name="is_multi_currency" invisible="1"/>
                            <field name="payment_rate" required="1" on_change="onchange_rate(payment_rate, amount, currency_id, payment_rate_currency_id, company_id, context)" string="Rate"/>
                            <field name="payment_rate_currency_id"  on_change="onchange_payment_rate_currency(currency_id, payment_rate, payment_rate_currency_id, date, amount, company_id, context)" string="Company Currency"/>
                            <field name="paid_amount_in_company_currency" string="Total"/>                    		                   		
                		</group>                     		               		    		
                    </group>
                    <notebook colspan="4">
                        <page string="Voucher Detail">
                        	
                        	<!--
                            <field name="line_dr_ids" context="{'journal_id':journal_id, 'type':type, 'partner_id':partner_id}" colspan="4" nolabel="1" height="140">
                            -->
                            <field name="line_cr_ids" colspan="4" nolabel="1" height="140">
                            
                                <tree string="Voucher Detail" editable="bottom" colors="gray:amount==0">
                                	<!--
                                    <field name="move_line_id" context="{'journal_id':parent.journal_id, 'partner_id':parent.partner_id}"
                                        on_change="onchange_move_line_id(move_line_id)"
                                        domain="[('account_id.type','=','payable'), ('reconcile_id','=', False), ('partner_id','=',parent.partner_id)]"
                                        required="1"
                                        />
                                    -->
                                    <field name="move_line_id" domain="[('reconcile_id','=',False),('account_id.reconcile','=',True),('debit','>',0)]" on_change="onchange_move_id(move_line_id, parent.journal_id, parent.currency_id)" readonly="1"/>                                    
                                    
                                    <!--
                                    <field name="account_id" groups="base.group_no_one" domain="[('type','=','payable')]"/>
                                    -->
                                    <field name="account_id" domain="[('type','!=','view')]"/>
                                     <field name="analytics_id" domain="[('plan_id','&lt;&gt;',False)]"/>
                                    <field name="name" required="1"/>
                                    
                                    <field name="date_original" readonly="1"/>
                                    <field name="date_due" readonly="1"/>
                                    <field name="amount_original" readonly="1"/>
                                    <field name="amount_unreconciled" readonly="1"/>
                                    <field name="reconcile" on_change="onchange_reconcile(reconcile, amount, amount_unreconciled, context)"/>
                                    <field name="amount" sum="Total Allocation" on_change="onchange_amount(amount, amount_unreconciled, context)"/>
                                </tree>
                            </field>
                            
                            <group name="group_4" colspan="4" col="2">
                            	<group name="group_4_1" colspan="1" col="2">
                            		<button name="%(waction_stock_wizardImportMoveLine)d" string="Import Invoice" states="draft" icon="gtk-execute" type="action" context="{'move_type' : 'cr'}"/>
                        		</group>
                        		<group name="group_4_2" colspan="1" col="2">
                        			<separator string="Difference Amount" colspan="2"/>
									<field name="writeoff_amount"/>
									<field name="payment_option" invisible="1"/>
									<field name="writeoff_acc_id" domain="[('type','!=','view')]" attrs="{'required':[('writeoff_amount','!=',0)]}"/>
								</group>
							</group>
                        </page>
                        <page string="Notes">
                        	<field name="narration" colspan="4" nolabel="1"/>
                        </page>
                        <page string="Journal Items" groups="base.group_extended" attrs="{'invisible': [('state','!=','posted')]}">
                            <group col="6" colspan="4">
                                <field name="period_id"/>
                            </group>
                            <field name="move_ids" colspan="4" nolabel="1" readonly="1">
                               <tree string="Journal Items">
                                   <field name="move_id"/>
                                   <field name="ref"/>
                                   <field name="date"/>
                                   <field name="statement_id"/>
                                   <field name="partner_id"/>
                                   <field name="account_id"/>
                                   <field name="name"/>
                                   <field name="debit"/>
                                   <field name="credit"/>
                                   <field name="state"/>
                                   <field name="reconcile_id"/>
                                   <field name="amount_currency"/>
                                   <field name="currency_id"/>
                               </tree>
                            </field>
                        </page>
                    </notebook>
                    <group name="group_2" colspan="4" col="3">
                    	<group name="group_2_1" colspan="1" col="2">
                    		<separator string="State" colspan="2"/>
                        	<field name="state"/>
                    	</group>
                    	<group name="group_2_2" colspan="1" col="2">
                    		<separator string="Print" colspan="2"/>
                    	</group>
                    	<group name="group_2_3" colspan="1" col="2">
                    		<separator string="Workflow" colspan="2"/>
                    		<button name="button_workflow_action_confirm" type="object" string="Confirm" colspan="2" icon="gtk-yes" states="draft" groups="ar_account.group_account_bankReceiptValidator"/>
                    		<button name="button_workflow_action_proforma" type="object" string="Proforma" colspan="2" icon="gtk-yes" states="ready" groups="ar_account.group_account_bankReceiptUser"/>
                    		<button name="button_workflow_action_ready" type="object" string="Approve" colspan="2" icon="gtk-yes" states="waiting" groups="ar_account.group_account_bankReceiptApprove"/>
                    		<button name="button_workflow_action_posted" type="object" string="Posted" colspan="2" icon="gtk-yes" states="proforma,ready" groups="ar_account.group_account_bankReceiptPost"/>
                    		<button name="button_workflow_action_cancel" type="object" string="Cancel" colspan="2" icon="gtk-cancel" states="draft,confirm,waiting,proforma,ready" groups="ar_account.group_account_bankReceiptCancel"/>
                    		<button name="button_cancel" type="object" string="Cancel" colspan="2" icon="gtk-cancel" states="posted" groups="ar_account.group_account_bankReceiptCancel"/>
                    		<button name="button_set_to_draft" type="object" string="Set To Draft" colspan="2" icon="terp-stock_effects-object-colorize" states="cancel" groups="ar_account.group_account_bankReceiptCancel"/>
                    	</group>                    	
                    </group>
                </form>
            </field>
        </record>        
        
        <!-- TREE -->
        
        <record model="ir.ui.view" id="tree_account_bankReceipt">
            <field name="name">Tree Bank Receipt</field>
            <field name="model">account.bank_receipt</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree colors="blue:state == 'draft';gray:state == 'cancel'" string="Voucher Entries">
                    <field name="number" string="# Voucher"/>
                    <field name="reference" string="Description"/>
                    <field name="date"/>
                    <field name="period_id"/>
                    <field name="company_id"/>
                    <field name="journal_id"/>
                    <field name="payment_method"/>
                   <field name="cheque_number"/>
                   <field name="cheque_date"/>
                    <field name="amount" sum="Total Amount"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>        

	</data>
</openerp>
