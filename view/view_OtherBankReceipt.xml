<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
		<!-- TREE -->
        <record model="ir.ui.view" id="tree_account_otherBankReceipt">
            <field name="name">Tree Other Bank Receipt</field>
            <field name="model">account.other_bank_receipt</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree colors="blue:state == 'draft';gray:state == 'cancel';red:audit" string="Other Bank Receipt">
                    <field name="number" string="# Transaction"/>
                    <field name="date"/>
                    <field name="reference"/>
                    <field name="partner_id"/>
                    <field name="journal_id"/>
                    <field name="period_id" groups="base.group_extended" invisible="context.get('visible', True)"/>
                    <field name="type" invisible="context.get('visible', True)"/>
                    <field name="amount" sum="Total Amount"/>
                    <field name="audit"/>
                    <field name="state"/>
                    <button name="proforma_voucher" string="Post" states="draft" icon="terp-document-new"/>
                </tree>
            </field>
        </record>
        
		<!-- FORM -->
        <record model="ir.ui.view" id="form_account_otherBankReceipt">
            <field name="name">Form Other Bank Receipt</field>
            <field name="model">account.other_bank_receipt</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <form string="Other Bank Receipt">
                	<group name="group_1" colspan="4" col="3">
                		<group name="group_1_1" colspan="1" col="2">
                			<separator string="Other Bank Receipt" colspan="2"/>
                			<field name="number" string="# Transaction"/>
                			<field name="partner_id" required="1" on_change="onchange_journal_voucher(line_ids, tax_id, amount, partner_id, journal_id, type)"/>
		                    <field name="date" on_change="onchange_date(date, currency_id, payment_rate_currency_id, amount, company_id)"/>
		                    <field name="journal_id" select="1" on_change="onchange_journal_voucher(line_ids, tax_id, amount, partner_id, journal_id, type)"/>
		                    <field name="currency_id"/>
		                    <field name="amount"/>
                        	<field name="type" required="1" invisible="1"/>            
                        	<field name="account_id" widget="selection" invisible="1"/>  
                        	<field name="company_id" widget="selection" groups="base.group_multi_company"/>  		
                        	 <field name="tax_id" on_change="onchange_price(line_ids, tax_id, partner_id)" widget="selection" invisible="1"/>	
                        	 <field name="tax_amount" nolabel="1" invisible="1"/>
                		</group>
                		<group name="group_1_2" colspan="1" col="2">
                			<separator string="Payment Method" colspan="2"/>
                    		<field name="payment_method" required="1"/>
                    		<field name="cheque_number" attrs="{'required' : [('payment_method','!=','bank_transfer')], 'invisible':[('payment_method','!=','cheque'),('payment_method','!=','giro')]}"/>
                    		<field name="cheque_date" attrs="{'required' : [('payment_method','!=','bank_transfer')], 'invisible':[('payment_method','!=','cheque'),('payment_method','!=','giro')]}"/>
                    		<field name="cheque_recepient" attrs="{'invisible':[('payment_method','!=','cheque')]}"/>
                    		<field name="cheque_partner_bank_id" domain="[('partner_id','=',partner_id)]" attrs="{'required' : [('payment_method','=','giro')], 'invisible':[('payment_method','!=','giro')]}"/>
                    		<field name="cheque_bank_id" attrs="{'invisible':[('payment_method','!=','giro')]}"/>                			
                		</group>                		
                		<group name="group_1_3" colspan="1" col="2">
                			<separator string="Other Information" colspan="2"/>
		                    <field name="name" colspan="2"/>
		                    <field name="reference" select="1"/>                			
                		</group>                		
                	</group>
                    <notebook colspan="4">
                        <page string="Voucher Entry">
                            <field name="line_ids" on_change="onchange_price(line_ids, tax_id, partner_id)" context="{'journal_id':journal_id, 'type':type, 'partner_id':partner_id, 'default_detail_type_selection' : 'cr'}" colspan="4" nolabel="1" height="180">
                                <tree string="Voucher Items" editable="bottom">
                                    <field name="account_id" domain="[('type','!=','view'),('type','!=','consolidation')]"/>
                                    <field name="name"/>
                                    <field name="amount" sum="Total Amount"/>
                                    <field name="type" invisible="1"/>
                                    <field name="account_analytic_id" groups="analytic.group_analytic_accounting"/>
                                </tree>
                            </field>
		                    <separator string="Internal Notes" colspan="4"/>
		                    <field name="narration" colspan="4" nolabel="1"/>
                        </page>
                        <page string="Journal Items" groups="base.group_extended" attrs="{'invisible': [('state','!=','posted')]}">
                            <group col="6" colspan="4">
                                <field name="period_id"/>
                                <field name="audit"/>
                            </group>
                            <field name="move_ids" colspan="4" nolabel="1" readonly="1">
                               <tree string="Journal Items">
                                   <field name="move_id"/>
                                   <field name="ref"/>
                                   <field name="date"/>
                                   <field name="statement_id"/>
                                   <field name="partner_id"/>
                                   <field name="account_id"/>
                                   <field name="name"/>
                                   <field name="debit"/>
                                   <field name="credit"/>
                                   <field name="state"/>
                                   <field name="reconcile_id"/>
                               </tree>
                            </field>
                        </page>
                    </notebook>
                    <group col="10" colspan="4">
                        <field name="state"/>
                        <button name="button_cancel_voucher" type="object" string="Cancel" states="draft,proforma"  icon="gtk-cancel"/>
                        <button name="cancel_voucher" string="Cancel" type="object" states="posted" icon="terp-stock_effects-object-colorize" confirm="Are you sure to unreconcile this record ?"/>
                        <button name="button_proforma_voucher" type="object" string="Post" states="draft" icon="terp-camera_test"/>
                        <button name="action_cancel_draft" type="object" states="cancel" string="Set to Draft" icon="terp-stock_effects-object-colorize"/>
                    </group>
                </form>
            </field>
        </record>       
        
        <!-- SEARCH -->
        <record id="select_account_otherBankReceipt" model="ir.ui.view">
            <field name="name">Select Other Bank Receipt</field>
            <field name="model">account.other_bank_receipt</field>
            <field name="type">search</field>
            <field name="arch" type="xml">
                <search string="Other Bank Receipt">
                    <group>
                        <filter icon="terp-document-new" string="Draft" domain="[('state','=','draft')]" help="Draft Vouchers"/>
                        <filter icon="terp-camera_test" string="Posted" domain="[('state','=','posted')]" help="Posted Vouchers"/>
                        <separator orientation="vertical"/>
                        <filter icon="terp-gtk-jump-to-ltr" string="To Review" domain="[('state','=','posted')]" groups="base.group_extended" help="To Review"/>
                        <separator orientation="vertical"/>
                        <field name="date"/>
                        <field name="number"/>
                        <field name="partner_id" string="Supplier"/>
                    </group>
                    <newline/>
                    <group>
                        <field name="journal_id" widget="selection" context="{'journal_id': self, 'set_visible':False}" domain="[('type','in',('purchase','purchase_refund'))]"/>
                        <field name="period_id" groups="base.group_extended"/>
                    </group>
                   <newline/>
                    <group expand="0" string="Group By...">
                        <filter string="Supplier" icon="terp-personal" domain="[]" context="{'group_by':'partner_id'}"/>
                        <filter string="Journal" icon="terp-folder-orange" domain="[]" context="{'group_by':'journal_id'}"/>
                        <filter string="Period" icon="terp-go-month" domain="[]" context="{'group_by':'period_id','visible':True}"/>
                        <filter string="State" icon="terp-stock_effects-object-colorize" domain="[]" context="{'group_by':'state'}"/>
                    </group>
                </search>
            </field>
        </record>        
         
	</data>
</openerp>
