<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>

		<!-- TRIAL BALANCE 
        <report id="report_account_balanceSheet" 
        		auto="False" 
        		model="account.account" 
        		name="account.report_balance"
                file="ar_account/report/templates/account_report_balance_sheet.mako"
                string="Balance Sheet"
                report_type="webkit"/> -->

       <record id="account_report_account_balanceSheet" model="ir.actions.report.xml">
            <field name="report_type">webkit</field>
            <field name="report_name">report_balance_sheet</field>
            <field eval="[(6,0,[])]" name="groups_id"/>
            <field eval="0" name="multi"/>
            <field eval="0" name="auto"/>
            <field eval="1" name="header"/>
            <field name="model">account.account</field>
            <field name="type">ir.actions.report.xml</field>
            <field name="name">Balance Sheet Webkit</field>
            <field name="report_rml">ar_account/report/templates/account_report_balance_sheet.mako</field>
            <field name="report_file">ar_account/report/templates/account_report_balance_sheet.mako</field>
        </record> 

        <record id="property_account_report_account_balanceSheet" model="ir.property">
            <field name="name">account_report_account_balanceSheet_webkit</field>
            <field name="fields_id" ref="report_webkit.field_ir_act_report_xml_webkit_header"/>
            <field eval="'ir.header_webkit,'+str(ref('ar_account.financial_landscape_header'))" model="ir.header_webkit" name="value"/>
            <field eval="'ir.actions.report.xml,'+str(ref('ar_account.account_report_account_balanceSheet_webkit'))" model="ir.actions.report.xml" name="res_id"/>
        </record>

	</data>
</openerp>
