<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
    	<!-- SUPPLIER INVOICE ON PROGRESS -->
		<record id="waction_account_boardSupplierInvoiceProgress" model="ir.actions.act_window">
			<field name="name">Supplier Invoice On Progress</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">account.supplier_invoice</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="search_view_id" ref="search_account_supplierInvoice"/>
			<field name="domain">[('invoice_type_id.name','=','Supplier Invoice'),('state','=','draft')]</field>
			<field name="context">{'invoice_type' : 'Supplier Invoice'}</field>
		</record>
		
		<record id="wactionView_account_treeBoardSupplierInvoiceProgress" model="ir.actions.act_window.view">
			<field eval="10" name="sequence"/>
			<field name="view_mode">tree</field>
			<field name="view_id" ref="tree_account_supplierInvoice"/>
			<field name="act_window_id" ref="waction_account_boardSupplierInvoiceProgress"/>
		</record>
		
		<!-- DEBIT NOTE IN PROGRESS -->
		<record id="waction_account_boardDebitNoteProgress" model="ir.actions.act_window">
			<field name="name">Debit Note On Progress</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">account.debit_note</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="search_view_id" ref="search_account_debitNote"/>
			<field name="domain">[('invoice_type_id.name','=','Debit Note'),('state','=','draft')]</field>
			<field name="context">{'invoice_type' : 'Debit Note'}</field>
		</record>
		
		<record id="wactionView_account_treeBoardDebitNoteProgress" model="ir.actions.act_window.view">
			<field eval="10" name="sequence"/>
			<field name="view_mode">tree</field>
			<field name="view_id" ref="tree_account_debitNote"/>
			<field name="act_window_id" ref="waction_account_boardDebitNoteProgress"/>
		</record>		
		
    	<!-- UNPAID SUPPLIER INVOICE -->
		<record id="waction_account_boardSupplierInvoiceUnpaid" model="ir.actions.act_window">
			<field name="name">Unpaid Supplier Invoice</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">account.supplier_invoice</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="search_view_id" ref="search_account_supplierInvoice"/>
			<field name="domain">[('invoice_type_id.name','=','Supplier Invoice'),('state','=','open')]</field>
			<field name="context">{'invoice_type' : 'Supplier Invoice'}</field>
		</record>
		
		<record id="wactionView_account_treeBoardSupplierInvoiceUnpaid" model="ir.actions.act_window.view">
			<field eval="10" name="sequence"/>
			<field name="view_mode">tree</field>
			<field name="view_id" ref="tree_account_supplierInvoice"/>
			<field name="act_window_id" ref="waction_account_boardSupplierInvoiceUnpaid"/>
		</record>		
		    
        <record id="form_account_boardAP" model="ir.ui.view">
            <field name="name">Dashboard A/P</field>
            <field name="model">board.board</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Dashboard A/P">
                    <board style="2-1">
                        <column>
							 <action name="%(waction_account_boardSupplierInvoiceProgress)d" string="Supplier Invoices On Progress"/>
							 <action name="%(waction_account_boardDebitNoteProgress)d" string="Debit Note On Progress"/>
                        </column>
                        <column>
							<action name="%(waction_account_boardSupplierInvoiceUnpaid)d" string="Unpaid Supplier Invoice"/>
                        </column>
                    </board>
                </form>
            </field>
        </record>

        <record id="waction_account_boardAP" model="ir.actions.act_window">
            <field name="name">Dashboard A/P</field>
            <field name="res_model">board.board</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="usage">menu</field>
            <field name="view_id" ref="form_account_boardAP"/>
        </record>

    </data>
</openerp>
