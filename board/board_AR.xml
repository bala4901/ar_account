<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
		<record id="waction_account_boardCustomerInvoice" model="ir.actions.act_window">
			<field name="name">Customer Invoice On Progress</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">account.customer_invoice</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree</field>
			<field name="search_view_id" ref="search_account_customerInvoice"/>
			<field name="domain">[('invoice_type_id.name','=','Customer Invoice'),('state','=','draft')]</field>
			<field name="context">{'invoice_type' : 'Customer Invoice'}</field>
		</record>
		
		<record id="wactionView_account_treeBoardCustomerInvoice" model="ir.actions.act_window.view">
			<field eval="10" name="sequence"/>
			<field name="view_mode">tree</field>
			<field name="view_id" ref="tree_account_customerInvoice"/>
			<field name="act_window_id" ref="waction_account_boardCustomerInvoice"/>
		</record>
		
		<!-- CREDIT NOTE -->
		<record id="waction_account_boardCreditNote" model="ir.actions.act_window">
			<field name="name">Credit Note On Progress</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">account.credit_note</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree</field>
			<field name="search_view_id" ref="search_account_creditNote"/>
			<field name="domain">[('invoice_type_id.name','=','Credit Note'),('state','=','draft')]</field>
			<field name="context">{'invoice_type' : 'Credit Note'}</field>
		</record>
		
		<record id="wactionView_account_treeCreditNote" model="ir.actions.act_window.view">
			<field eval="10" name="sequence"/>
			<field name="view_mode">tree</field>
			<field name="view_id" ref="tree_account_creditNote"/>
			<field name="act_window_id" ref="waction_account_boardCreditNote"/>
		</record>		
		
		<!-- UNPAID A/R -->
		<record id="waction_account_boardUnpaidCustomerInvoice" model="ir.actions.act_window">
			<field name="name">Unpaid Customer Invoice</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">account.customer_invoice</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree</field>
			<field name="search_view_id" ref="search_account_customerInvoice"/>
			<field name="domain">[('invoice_type_id.name','=','Customer Invoice'),('state','=','open')]</field>
			<field name="context">{'invoice_type' : 'Customer Invoice'}</field>
		</record>
		
		<record id="wactionView_account_treeBoardUnpaidCustomerInvoice" model="ir.actions.act_window.view">
			<field eval="10" name="sequence"/>
			<field name="view_mode">tree</field>
			<field name="view_id" ref="tree_account_customerInvoice"/>
			<field name="act_window_id" ref="waction_account_boardUnpaidCustomerInvoice"/>
		</record>		
		    
        <record id="form_account_boardAR" model="ir.ui.view">
            <field name="name">Dashboard A/R</field>
            <field name="model">board.board</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Dashboard A/R">
                    <board style="2-1">
                        <column>
							 <action name="%(waction_account_boardCustomerInvoice)d" string="Customer Invoices On Progress"/>
							 <action name="%(waction_account_boardCreditNote)d" string="Credit Note On Progress"/>
                        </column>
                        <column>
							<action name="%(waction_account_boardUnpaidCustomerInvoice)d" string="Unpaid Customer Invoice"/>
                        </column>
                    </board>
                </form>
            </field>
        </record>

        <record id="waction_account_boardAR" model="ir.actions.act_window">
            <field name="name">Dashboard A/R</field>
            <field name="res_model">board.board</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="usage">menu</field>
            <field name="view_id" ref="form_account_boardAR"/>
        </record>

    </data>
</openerp>
