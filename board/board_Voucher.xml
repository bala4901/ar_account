<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
	<!-- ON PROGRESS VOUCHER -->
		<record id="waction_account_boardBankPaymentProgress" model="ir.actions.act_window">
			<field name="name">Bank Payment On Progress</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">account.bank_payment</field>
			<field name="search_view_id" ref="select_account_bankPayment"/>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="context">{'voucher_type' : 'Bank Payment'}</field>
			<field name="domain">[('voucher_type_id.name','=','Bank Payment'),('state','=','draft')]</field>
		</record>
		
		<record id="wactionView_account_treeBoardBankPaymentProgress" model="ir.actions.act_window.view">
			<field eval="10" name="sequence"/>
			<field name="view_mode">tree</field>
			<field name="view_id" ref="tree_account_bankPayment"/>
			<field name="act_window_id" ref="waction_account_boardBankPaymentProgress"/>
		</record>	
		
		<!-- ON PROGRESS BANK RECEIPT -->
		<record id="waction_account_boardBankReceiptProgress" model="ir.actions.act_window">
			<field name="name">Bank Receipt On Progress</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">account.bank_receipt</field>
			<field name="search_view_id" ref="select_account_bankReceipt"/>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="context">{'voucher_type' : 'Bank Receipt'}</field>
			<field name="domain">[('voucher_type_id.name','=','Bank Receipt'),('state','=','draft')]</field>
		</record>
		
		<record id="wactionView_account_treeBoardBankReceiptProgress" model="ir.actions.act_window.view">
			<field eval="10" name="sequence"/>
			<field name="view_mode">tree</field>
			<field name="view_id" ref="tree_account_bankReceipt"/>
			<field name="act_window_id" ref="waction_account_boardBankReceiptProgress"/>
		</record>	
		
		<!-- CASH PAYMENT ON PROGRESS -->
		<record id="waction_account_boardCashPaymentProgress" model="ir.actions.act_window">
			<field name="name">Cash Payment On Progress</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">account.cash_payment</field>
			<field name="search_view_id" ref="select_account_cashPayment"/>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="context">{'voucher_type' : 'Cash Payment'}</field>
			<field name="domain">[('voucher_type_id.name','=','Cash Payment'),('state','=','draft')]</field>
		</record>
		
		<record id="wactionView_account_treeBoardCashPaymentProgress" model="ir.actions.act_window.view">
			<field eval="10" name="sequence"/>
			<field name="view_mode">tree</field>
			<field name="view_id" ref="tree_account_cashPayment"/>
			<field name="act_window_id" ref="waction_account_boardCashPaymentProgress"/>
		</record>			
		
		<record id="waction_account_boardCashReceiptProgress" model="ir.actions.act_window">
			<field name="name">Cash Receipt On Progress</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">account.cash_receipt</field>
			<field name="search_view_id" ref="select_account_cashReceipt"/>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="context">{'voucher_type' : 'Cash Receipt'}</field>
			<field name="domain">[('voucher_type_id.name','=','Cash Receipt'),('state','=','draft')]</field>
		</record>
		
		<record id="wactionView_account_treeBoardCashReceiptProgress" model="ir.actions.act_window.view">
			<field eval="10" name="sequence"/>
			<field name="view_mode">tree</field>
			<field name="view_id" ref="tree_account_cashReceipt"/>
			<field name="act_window_id" ref="waction_account_boardCashReceiptProgress"/>
		</record>		
		    
        <record id="form_account_boardVoucher" model="ir.ui.view">
            <field name="name">Dashboard Voucher</field>
            <field name="model">board.board</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Dashboard Voucher">
                    <board style="2-1">
                        <column>
							 <action name="%(waction_account_boardBankPaymentProgress)d" string="Bank Payment On Progress"/>
							 <action name="%(waction_account_boardCashPaymentProgress)d"  string="Cash Payment On Progress"/>
                        </column>
                        <column>
							<action name="%(waction_account_boardBankReceiptProgress)d" string="Bank Receipt On Progress"/>
							<action name="%(waction_account_boardCashReceiptProgress)d" string="Cash Receipt On Progress"/>
                        </column>
                    </board>
                </form>
            </field>
        </record>

        <record id="waction_account_boardVoucher" model="ir.actions.act_window">
            <field name="name">Dashboard Voucher</field>
            <field name="res_model">board.board</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="usage">menu</field>
            <field name="view_id" ref="form_account_boardVoucher"/>
        </record>

    </data>
</openerp>
